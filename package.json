{
  "name": "voice-web-backend",
  "version": "1.0.0",
  "description": "Backend API for Voice-Based Web Interaction System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ai": "jest src/ai --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc && echo 'TypeScript build completed successfully'",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage",
    "deploy": "npm run build && npm start",
    "ai:example": "ts-node src/ai/example-usage.ts"
  },
  "keywords": [
    "voice",
    "web",
    "interaction",
    "browser",
    "extension",
    "ai",
    "speech"
  ],
  "author": "Voice Web Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "form-data": "^4.0.0",
    "groq-sdk": "^0.3.3",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^5.12.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.4.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nock": "^14.0.9",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/voice-web-backend.git"
  }
}
